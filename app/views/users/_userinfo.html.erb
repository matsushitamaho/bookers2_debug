<h1>User info</h1>
  <table>
    <%= image_tag user.profile_image,size:'100x100' %>
  <tr>
    <td>name</td>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= user.introduction %></td>
  </tr>
  </table>
  
  <%= link_to edit_user_path(user.id), class: "btn btn-block btn-outline-secondary p-0 mt-3" do %>
  <i class="fas fa-user-cog"></i>
<% end %>